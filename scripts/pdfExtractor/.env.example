# NSG Extraction Tool Environment Variables
# Copy this file to .env and fill in your values

# DeepSeek API Configuration
DEEPSEEK_ENDPOINT=https://api.deepseek.com/v1/chat/completions
DEEPSEEK_API_KEY=sk-your-api-key-here

# Model Configuration
# For legacy run command (optional, defaults to deepseek-chat)
DEEPSEEK_MODEL=deepseek-chat

# For enumdiff command (recommended for optimal performance)
# Chat model: fast, reliable for clear cases
DEEPSEEK_MODEL_CHAT=deepseek-chat
# Reasoner model: thorough analysis for uncertain cases
DEEPSEEK_MODEL_REASONER=deepseek-reasoner

# Optional: Override default directories
# OUTPUT_DIR=out
# LOGS_DIR=logs

# Optional: Adjust processing parameters
# DEFAULT_MAX_CHARS=4000
# DEFAULT_CONCURRENCY=4
# DEFAULT_MIN_DOC_COUNT=5